{
  "name": "Cute Countdown",
  "description": "Displays a countdown to a holiday",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["storage", "activeTab", "scripting", "tabs"],

  
  "chrome_url_overrides":{
    "newtab": "calendar.html"
  },

  "action": {
    "default_title": "Cute Calendar",
    "default_icon": {
      "16": "/images/calendar_16.png",
      "32": "/images/calendar_32.png",
      "48": "/images/calendar_48.png",
      "128": "/images/calendar_128.png"
    }
  },

  "icons": {
    "16": "/images/calendar_16.png",
    "32": "/images/calendar_32.png",
    "48": "/images/calendar_48.png",
    "128": "/images/calendar_128.png"
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
